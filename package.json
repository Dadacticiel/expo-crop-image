{
  "name": "expo-crop-image",
  "version": "0.0.1",
  "description": "Allows user to crop image with given aspect ratio for react native using expo on Android and IOS - (Workaround for IOS always square images).",
  "main": "./dist/index.js",
  "types": "./src/@types/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "prepare": "husky install",
    "lint": "eslint src --ext .tsx,.ts --ignore-pattern node_modules/",
    "lint:fix": "npm run lint -- --fix",
    "commit": "git-cz --allow-empty"
  },
  "keywords": [
    "expo-crop-image",
    "edit-image",
    "crop-image",
    "edit",
    "crop",
    "image",
    "image-picker",
    "react-native",
    "expo",
    "ios",
    "android"
  ],
  "author": "NitoBa",
  "repository": {
    "type": "git",
    "url": "https://github.com/NitoBa/expo-crop-image.git"
  },
  "license": "MIT",
  "peerDependencies": {
    "@expo/vector-icons": "*",
    "expo-image-manipulator": "*",
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": "*"
  },
  "devDependencies": {
    "@expo/vector-icons": "13.0.0",
    "@rocketseat/eslint-config": "^1.1.3",
    "@types/react": "^18.0.25",
    "@types/react-native": "^0.70.6",
    "commitizen": "^4.2.5",
    "eslint": "^8.28.0",
    "expo-image-manipulator": "10.3.1",
    "husky": "^8.0.2",
    "prettier": "^2.7.1",
    "react": "^18.1.0",
    "react-native": "^0.70.6",
    "react-native-gesture-handler": "2.2.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "recoil": "0.7.3"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "src/**": "npm run lint:fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "dist/**",
    "src/@types/index.d.ts"
  ]
}
